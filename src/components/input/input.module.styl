@import '../../styles/colors.styl';

.root {
  display: flex;
  flex-direction: column;
}

.input {
  padding: 5px 0;
  color: $text-default;
  background: none;
  outline: none;
  border: none;
  border-bottom: 2px solid $border-default;

  &::placeholder {
    color: $text-secondary;
  }

  &:focus {
    border-color: $border-prime;
  }
}

.label {
  color: $text-prime;
  font-size: 14px;
  font-weight: bold;
}

.error {
  display: none;
  color: $error-color;
  font-size: 12px;
  padding-top: 5px;
}
